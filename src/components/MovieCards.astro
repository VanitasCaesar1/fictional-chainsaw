---
const url = "https://www.omdbapi.com/?i=tt3896198&apikey=a18aad21&s=${title}" 
   
    
    const response = await fetch(url);
    const data = await response.json();

    const showSearchResults= false;

---

<script is:inline>
     const title = document.getElementById('search')
     const year = document.getElementById('year')
</script>

<section class="p-4 max-sm:-m-6 md:m-6 overflow-hidden min-h-screen">
    <div>
    <h1 class="">Movies</h1>
    <div class="mt-10 max-w-2xl w-full mx-auto px-4 sm:px-3 lg:px-8">
        <div class="relative">
          <input type="text" id="search" class="p-4 block w-full rounded-full text-sm dark:bg-neutral-600 " placeholder="Ask me anything...">
          <div class="absolute top-1/2 end-2 -translate-y-5">
            <button type="submit" class="dark:bg-lime-400 size-10 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-full">
            <img src="/search.svg" alt="searchbutton">
            </button>
          </div>
        </div>
    </div>
</div>
    <div class="grid items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-24 max-w-full">
        <div class="grid w-full grid-cols-1 gap-6 mx-auto lg:grid-rows-3">
            { showSearchResults ? 
            
            <div class="py-6">
                <h1 class="mx-auto mb-8 text-4xl font-semibold leading-none tracking-widertext-black dark:text-lime-200 lg:text-5xl">{data.Title}</h1>
                <h2 class="mb-8 text-lg font-semibold tracking-widest text-blue-600 uppercase"><span class="font-extrabold">STUDIO:  </span> {data.Released}</h2>
                <h2 class="mb-8 text-lg font-semibold tracking-widest text-blue-600 uppercase">{data.Year}</h2>
                    <div class="dark:bg-lime-100 bg-lime-300 rounded-3xl p-8">
                        <p class="mx-auto text-pretty text-xl font-bold leading-relaxed tracking-wide text-gray-500">{}</p>
                        <a href="/" class=" hover:underline text-black">read more</a>
                    </div>
                            
            </div> 
                    :
            <h2 class="flex items-center justify-center">search for movies</h2>
            }    
        </div>
</section>



